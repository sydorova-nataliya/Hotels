@model hotelcourseworkV2.ViewModels.DishCreateViewModel

@{
    ViewData["Title"] = "Edit Dish";
}

<h1 class="text-center my-4">Редагування страви</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="EditDish">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Назва</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Recipe" class="form-label">Рецепт</label>
                        <textarea asp-for="Recipe" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Recipe" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Weight" class="form-label">Вага</label>
                        <input asp-for="Weight" class="form-control" />
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Unit" class="form-label">Одиниця</label>
                        <input asp-for="Unit" class="form-control" />
                        <span asp-validation-for="Unit" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">Ціна</label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Інгредієнти</label>
                        <div class="form-check">
                            @foreach (var ingredient in Model.AvailableIngredients)
                            {
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" name="SelectedIngredients" value="@ingredient.Id" id="ingredient_@ingredient.Id" />
                                    <label class="form-check-label" for="ingredient_@ingredient.Id">@ingredient.Title</label>
                                </div>
                            }
                        </div>
                        <span asp-validation-for="SelectedIngredients" class="text-danger"></span>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Додати</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
