@model hotelcourseworkV2.Models.Hotel

@{
    ViewData["Title"] = "Редагування готелю";
}

<div class="container">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Редагування готелю</h2>
        </div>
        <div class="card-body">
            <form asp-action="EditHotel" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Назва готелю</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Stars" class="control-label">Рейтинг</label>
                    <input asp-for="Stars" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label">Місто</label>
                    <input asp-for="City" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Street" class="control-label">Вулиця</label>
                    <input asp-for="Street" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ImagePath" class="control-label">Зображення</label>
                    <input type="file" name="imageFile" class="form-control" required />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                </div>
                <input asp-for="OwnerId" class="form-control" hidden />
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Зберегти зміни</button>
                </div>
            </form>
        </div>
    </div>
</div>
