<div class="card">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title">Список користувачів</h3>
    </div>
    <div class="card-body">
        <div class="container">
            <div class="row mb-3">
                <div class="col">
                    <a asp-controller="Users" asp-action="Create" class="btn btn-primary">Додати користувача</a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Аватар</th>
                            <th scope="col">Ім'я</th>
                            <th scope="col">Прізвище</th>
                            <th scope="col">По-батькові</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="https://via.placeholder.com/50" alt="Avatar" class="rounded-circle">
                                    </td>
                                    <td>@user.Name</td>
                                    <td>@user.LastName</td>
                                    <td>@user.MiddleName</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4"><h3 class="text-center text-muted">Немає користувачів</h3></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
